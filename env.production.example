# Production Environment Variables
# Copy this file to .env.prod and update the values

# Database Configuration
POSTGRES_DB=dam_db
POSTGRES_USER=dam_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# MinIO Configuration
MINIO_ROOT_USER=your_minio_admin_user
MINIO_ROOT_PASSWORD=your_minio_admin_password

# Backend Configuration
NODE_ENV=production
PORT=5000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000
ANALYTICS_RETENTION_VIEWS=90
ANALYTICS_RETENTION_DOWNLOADS=90
ANALYTICS_RETENTION_UPLOADS=365
ANALYTICS_RATE_LIMIT=true
ANALYTICS_RATE_LIMIT_WINDOW=900000
ANALYTICS_RATE_LIMIT_MAX=100

# Security Configuration
ANALYTICS_ANONYMIZE_USERS=false
ANALYTICS_HASH_USER_IDS=false
ANALYTICS_EXCLUDE_SENSITIVE=false

# Monitoring Configuration
ANALYTICS_MONITORING=true
ANALYTICS_ALERT_ON_FAILURE=false

# Fallback Configuration
ANALYTICS_DB_FALLBACK=true
ANALYTICS_GRACEFUL_DEGRADATION=true
