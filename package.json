{
  "name": "dam-backend",
  "version": "1.0.0",
  "description": "Digital Asset Management Backend",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:init": "ts-node src/database/init.ts",
    "db:reset": "ts-node src/database/init.ts",
    "setup:minio": "ts-node scripts/setup-minio.ts",
    "worker": "ts-node src/workers/asset-processing.worker.ts",
    "debug": "nodemon --exec \"node --inspect-brk=9229 -r ts-node/register\" src/app.ts",
    "prepare": "husky"
  },
  "keywords": [
    "dam",
    "digital-assets",
    "backend",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.0.0",
    "@aws-sdk/lib-storage": "^3.0.0",
    "@aws-sdk/s3-request-presigner": "^3.0.0",
    "@types/ioredis": "^4.28.10",
    "bullmq": "^5.56.10",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ioredis": "^5.7.0",
    "mime-types": "^2.1.35",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "sharp": "^0.33.0",
    "winston": "^3.17.0",
    "zod": "^4.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
